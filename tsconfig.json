{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "lib": [
            "dom",
            "es2015"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "importHelpers": true
    },
    "include": [
        "./index.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./typings/index.d.ts",
        "./typings/local.d.ts"
    ],
    "compileOnSave": false
}
